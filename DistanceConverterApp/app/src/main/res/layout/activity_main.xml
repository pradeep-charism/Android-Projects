<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/milesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Miles"
        android:textAllCaps="true"
        android:textColor="#0A1B7E"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="256dp" />

    <TextView
        android:id="@+id/kilometerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Kilometer"
        android:textAllCaps="true"
        android:textColor="#061357"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="340dp" />

    <EditText
        android:id="@+id/milesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/kilometerValue"
        style="@android:style/Widget.DeviceDefault.Light.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:singleLine="true"
        android:textColor="#8C1010"
        android:textSize="12sp"
        android:theme="@style/AppTheme"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="335dp" />

    <Button
        android:id="@+id/convertToKmButton"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="73dp"
        android:layout_height="54dp"
        android:text="Convert to Kilometer"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="451dp" />

    <Button
        android:id="@+id/convertToMilesButton"
        android:layout_width="73dp"
        android:layout_height="54dp"
        android:text="Convert        to        miles"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="448dp" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:foreground="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="448dp" />

</androidx.constraintlayout.widget.ConstraintLayout>