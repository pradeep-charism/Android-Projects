<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relativeLayout_mainScreen"
    tools:context="com.example.basicfeaturespoc.MainActivity">

    <Button
        android:id="@+id/button_blueInvisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/light_blue"
        android:text="@string/the_invisible_man_to_do_list" />

    <Button
        android:id="@+id/button_pinkPanther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_blueInvisible"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/light_pink"
        android:text="@string/the_pink_panther_to_do_list"/>

</RelativeLayout>

